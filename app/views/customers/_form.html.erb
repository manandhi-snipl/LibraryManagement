<%= form_for(@customer) do |f| %>

<% if @customer.errors.any? %>

<div id="error_explanation">
	<h2> <%= pluralize(@customer.errors.count, "error") %> prohibited </h2>

	<ul>

		<% @customer.errors.full_message.each do |message| %>

		<li><%= message %></li>
		<% end %>
	</ul>
</div>
<% end %>

<div class="field">

	<%= f.label :name %><br>
	<%= f.text_field  :name %>
</div>


<div class="field">

	<%= f.label :membership_no %><br>
	<%= f.text_field  :membership_no %>
</div>

<div class="field">

	<%= f.label :place %><br>
	<%= f.text_field  :place %>
</div>


<div class="actions">
	<%= f.submit %>
</div>

<% end %>




